-  title User.model_name.human(count: 2) 
-  heading User.model_name.human(count: 2) 

%table.table.table-hover
  %thead
    %tr
      %th= User.human_attribute_name(:full_name)
      %th= User.human_attribute_name(:email)
      %th= User.human_attribute_name(:confirmed?)
      %th= User.human_attribute_name(:admin)

  %tbody
    - @users.each do |user|
      %tr
        %td= user.full_name
        %td= user.email
        %td= fa_icon user.confirmed? ? "check" : "close"
        %td= fa_icon user.admin ? "check" : "close"
        %td= link_to t(:show), user_path(user)
        %td= link_to t(:edit), edit_user_path(user)
